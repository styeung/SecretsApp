<h1>Sign In</h1>

<form action="<%= session_url %>" method="post">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <label>Username
    <input name="user[username]" type="text">
  </label>
  <br>

  <label>Password
    <input name="user[password]" type="password">
  </label>
  <br>

  <input type="submit" value="Log in">
</form>
